.row
  .col-lg-2
    label Name
    input.form-control(ng-model="mapping.name")
    label or select existing
    select.form-control(ng-size="{{types.length}}")
      option(ng-repeat="item in types") {{item}}
  .col-lg-2
    label Mime-types
    select.form-control.selectFields(ui-sortable, ng-model="selectedModules", ng-size="{{Utils.keys(modules).length+1}}", multiple, ng-change="checkSelected()", ng-click="checkSelected()")
      optgroup(ng-repeat="(key, meme_types) in modulesList", label="{{key}}")
        option(ng-repeat="type in meme_types", value="{{type}}") {{type.split('/')[1] || type}}
  .col-lg-2.dnd
    label Fields
    ul(dnd-list='models.lists.fields')
      li(ng-repeat='(key,item) in models.lists.fields | unique:"field"', dnd-draggable='item', dnd-moved='models.lists.fields.splice($index, 1)', dnd-effect-allowed='move', ng-hide="item.field=='hashid'", ng-click="models.lists.fields.splice($index, 1); addField(item);", ng-class="{present: checkPresent(item)}") {{item.field}}
  .col-lg-2.dnd
    label Selected
    ul(dnd-list='models.lists.selectedFields', dnd-drop="selectField(event, index, item, type)")
      li(ng-repeat='(key,item) in models.lists.selectedFields', dnd-draggable='item', dnd-moved='models.lists.selectedFields.splice($index, 1); reloadFields();', dnd-effect-allowed='move', ng-click='models.lists.selectedFields.splice($index, 1); reloadFields();') {{item.field}}
  .col-lg-2.visualizations
    label Visualizations
    img(src="./images/visualizations/graph.png", width="100%", ng-click="mapping.visualizations.graph = !mapping.visualizations.graph", ng-class="{selected: mapping.visualizations.graph}")
    img(src="./images/visualizations/bar.png", width="100%", ng-click="mapping.visualizations.bar = !mapping.visualizations.bar", ng-class="{selected: mapping.visualizations.bar}")
    img(src="./images/visualizations/chord.png", width="100%", ng-click="mapping.visualizations.chord = !mapping.visualizations.chord", ng-class="{selected: mapping.visualizations.chord}")
  .col-lg-2
    button.btn.btn-primary(type="button", ng-click="createMapping()") Create Mapping